    <option value="<%= ChangeOptionObject.ChangeValue %>"<%= " selected=\"true\"" if ChangeOptionObject.ChangeValue == f.object.ChangeValue %> data-show-class="<%= ChangeShowClass %>"><%= ChangeOptionObject.ChangeDisplay %></option>
  <% end %>
<% end %>

