  <% card_header do %>
    ChangeHeader
  <% end %> 
  <% card_body do %> 
    <%# DeleteThis - if form does not use an instance of a active record model, replace model: with scope: and add value: option to inputs as needed %>
    <%= form_with model: ChangeModel, url: ChangePath(account, ChangeModel), method: :ChangeHtmlMethod do |f| %>
      <%# DeleteThis - insert hidden fields here if necessary %>

      <%# DeleteThis - insert form groups (or fields for if necessary) %>

      <div class="form-submit-buttons">
        <%# DeleteThis - NOTE: giving button a type of "button" prevents submitting the form (which is exactly what we want for the cancel button) %>
        <button type="button" class="btn btn-secondary mr-2" data-action="click->modal#hide">Cancel</button>
        <%= f.submit 'ChangeSubmitToAddForNewOrSaveForUpdate', class: 'btn' %>
      </div>
    <% end %> 
  <% end %> 
<% end %>
